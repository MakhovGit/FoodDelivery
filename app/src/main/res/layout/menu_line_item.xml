<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_line_item_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/menu_line_item_root_margin"
    app:cardCornerRadius="@dimen/menu_line_item_root_corner_radius">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/menu_line_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/menu_line_item_text_margin_horizontal"
        android:layout_marginVertical="@dimen/menu_line_item_text_margin_vertical"
        android:textSize="@dimen/menu_line_item_text_text_size" />

</androidx.cardview.widget.CardView>